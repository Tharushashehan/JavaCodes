
public class Test {
	public static void main(String a[]){
		System.out.println("hello world");
		
		for(int x=0;x<5;x++){
			for(int y=0;y<x;y++){
			
			System.out.print("*");
				
				}
			System.out.println(" ");
			
		}
		
		for(int x=0;x<5;x++){
			for(int y=5/2;y>x;y--){
				System.out.print(" ");
					}
			
			for(int y=0;y<x;y++){
				System.out.print("*");
					}
		}
		for(int x=0;x<5;x++){
			for(int y=5/2;y>x;y--){
				System.out.print(" ");
					}
			
			for(int y=0;y<x;y++){
				System.out.print("*");
					}
			
			for(int y=5/2;y>x;y--){
				System.out.print(" ");
					}
		}
			System.out.println(" ");
		}
		
	}


